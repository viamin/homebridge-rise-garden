{
    "displayName": "Homebridge Rise Garden",
    "name": "homebridge-rise-garden",
    "version": "0.0.0-development",
    "description": "A Homebridge plugin to control the lights on your Rise Garden from HomeKit.",
    "license": "Apache-2.0",
    "repository": {
