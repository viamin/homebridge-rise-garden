{
    "pluginAlias": "RiseGardenPlatform",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true,
                "default": "Rise Garden Platform"
            },
            "username": {
                "title": "Username",
                "type": "string",
                "required": true,
                "description": "Your Rise Garden app username"
            },
            "password": {
                "title": "Password",
                "type": "string",
                "required": true,
                "description": "Your Rise Garden app password"
            },
            "pull_timer": {
                "title": "Poll interval (minutes)",
                "type": "number",
                "default": 30,
                "required": true,
                "description": "How often to poll the Rise Garden API for new data",
                "minimum": 1,
                "maximum": 1440
            }
        }
    }
}